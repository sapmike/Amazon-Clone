<h2 style="color:white;"><strong>Account: <%=@user.email%></h2>

<br>
<br>
<% provide(:title, "Edit user") %>
<h4 style="color:white;">Update Password</h4>

<div class="row">
  <div class="col-md-6 col-md-offset-3" style="color:white;">
    <%= form_for(@user) do |f| %>
      <%= f.label "New Password" %>
      <%= f.password_field class: 'form-control' %>

      <%= f.label "Re-enter password" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "Update Password", class: "btn btn-warning" %>
    <% end %>
  </div>
</div>

<br>
<br>
<br>

<h4 style="color:white;">Delete Account</h4>


<div class="row">
  <div class="col-md-6 col-md-offset-3" style="color:white;">
    <%= form_for(@user) do |f| %>
    <%= button_to "Delete Account", {:controller => 'users', :action => 'destroy'}, :method => :delete, :class => "btn btn-danger" %>
    <% end %>
  </div>
</div>
