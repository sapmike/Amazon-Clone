<div class="span6 pull-right" style="text-align:right">
  <%= link_to("Products Page", {:action => 'index'}) %>
</div>

<h1 style="color: white;">
  Search Results
</h1>
<br>

<% if @products.empty? %>
  <h2 style="color: red;">
    No results found ;(
  </h2>
<%else%>
<div class="product-list" style="display:grid; grid-template-columns:repeat(auto-fill, minmax(200px, 1fr)); gap:15px;">
<%-@products.each do |product| %>
  <div class="product card text-center border-white" style="width:200px; background-color:transparent;">
    <%= link_to(product) do %>
    <img class="card-img-top" src="<%= product.cover%>" alt="Sample Pack Picture">
    <div class="card-body">
      <h5 class="card-title" style="color:white; text-decoration:none"><%=product.title%></h5>
      <p class="card-text" style="color:white;text-decoration:none">$<%=product.actual_price%></p>
      <a href="#" class="btn btn-warning">Add To Cart</a>
    </div>
   <%end%>
  </div>
<%end%>







<%end%>
